
<div class="container">
  <h1>New game</h1>

  <ul id="letters-container">
    <% @letters_array.each do |letter| %>
      <li id="letter-card">
      <%= letter %>
      </li>
    <% end %>
  </ul>

<form action="/score" id="word-form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Enter your word...">
  <input type="submit">
</form>

</div>
